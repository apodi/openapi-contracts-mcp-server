{
  "openapi": "3.0.1",
  "info": {
    "title": "Third-Party Payment Processor Consumer Requirements",
    "description": "Minimal API requirements for external payment processing services",
    "version": "1.0.0"
  },
  "paths": {
    "/accounts/{accountId}/balance": {
      "get": {
        "summary": "Check account balance for payment validation",
        "description": "Verify sufficient funds before processing payment",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account balance information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Balance"
                }
              }
            }
          }
        }
      }
    },
    "/transfers": {
      "post": {
        "summary": "Process payment transfer",
        "description": "Execute automated payment transfers from customer accounts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transfer completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transfer"
                }
              }
            }
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "summary": "Retrieve payment transaction records",
        "description": "Get transaction history for reconciliation and auditing",
        "parameters": [
          {
            "name": "accountId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 100,
              "maximum": 1000
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["payment"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction records for the specified period",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Balance": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "available": {
            "type": "number",
            "format": "decimal"
          },
          "current": {
            "type": "number",
            "format": "decimal"
          },
          "currency": {
            "type": "string",
            "default": "USD"
          }
        },
        "required": ["accountId", "available"]
      },
      "TransferRequest": {
        "type": "object",
        "properties": {
          "fromAccountId": {
            "type": "string",
            "description": "Customer account to debit"
          },
          "toAccountId": {
            "type": "string",
            "description": "Merchant/processor account to credit"
          },
          "amount": {
            "type": "number",
            "format": "decimal",
            "minimum": 0.01,
            "maximum": 10000
          },
          "description": {
            "type": "string",
            "maxLength": 255,
            "description": "Payment reference or description"
          }
        },
        "required": ["fromAccountId", "toAccountId", "amount", "description"]
      },
      "Transfer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique transfer identifier for tracking"
          },
          "fromAccountId": {
            "type": "string"
          },
          "toAccountId": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "status": {
            "type": "string",
            "enum": ["completed", "failed"],
            "description": "Final status of the payment"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp for transaction reconciliation"
          }
        },
        "required": ["id", "fromAccountId", "toAccountId", "amount", "status", "createdAt"]
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Transaction ID for reconciliation"
          },
          "accountId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit"]
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "description": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "category": {
            "type": "string",
            "enum": ["payment"]
          }
        },
        "required": ["id", "accountId", "type", "amount", "date", "category"]
      }
    }
  }
}