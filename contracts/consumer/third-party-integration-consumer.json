{
  "openapi": "3.0.1",
  "info": {
    "title": "Third Party Integration Consumer Requirements",
    "description": "API requirements for third-party financial integrations with enhanced security",
    "version": "1.0.0"
  },
  "paths": {
    "/accounts": {
      "get": {
        "summary": "List accounts for integration",
        "parameters": [
          {
            "name": "customerId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "includeBalances",
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account list for customer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AccountSummary"
                  }
                }
              }
            }
          },
          "403": {
            "description": "Access denied for customer"
          }
        }
      }
    },
    "/accounts/{accountId}/transactions": {
      "get": {
        "summary": "Get transactions for account",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 100,
              "maximum": 1000
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/customers/{customerId}/kyc": {
      "get": {
        "summary": "Get KYC status for customer",
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "KYC verification status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/KYCStatus"
                }
              }
            }
          }
        }
      }
    },
    "/webhooks/transactions": {
      "post": {
        "summary": "Register transaction webhook",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WebhookRegistration"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Webhook registered",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Webhook"
                }
              }
            }
          }
        }
      }
    },
    "/compliance/reports": {
      "post": {
        "summary": "Generate compliance report",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ComplianceReportRequest"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Report generation started",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["checking", "savings", "credit", "investment"]
          },
          "nickname": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "frozen", "closed"]
          },
          "currency": {
            "type": "string",
            "default": "USD"
          },
          "balance": {
            "type": "number",
            "format": "decimal"
          }
        },
        "required": ["id", "type", "status"]
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "accountId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit", "transfer", "fee", "interest"]
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "currency": {
            "type": "string",
            "default": "USD"
          },
          "description": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "category": {
            "type": "string",
            "enum": ["shopping", "dining", "transport", "entertainment", "utilities", "other"]
          },
          "merchant": {
            "type": "string"
          }
        },
        "required": ["id", "accountId", "type", "amount", "date"]
      },
      "KYCStatus": {
        "type": "object",
        "properties": {
          "customerId": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "rejected", "expired"]
          },
          "lastVerified": {
            "type": "string",
            "format": "date-time"
          },
          "documents": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["id", "proof_of_address", "bank_statement"]
            }
          }
        },
        "required": ["customerId", "status"]
      },
      "WebhookRegistration": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "events": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["transaction.created", "account.updated", "kyc.status_changed"]
            }
          },
          "secret": {
            "type": "string"
          }
        },
        "required": ["url", "events"]
      },
      "Webhook": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "events": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "failed"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "url", "events", "status"]
      },
      "ComplianceReportRequest": {
        "type": "object",
        "properties": {
          "customerId": {
            "type": "string"
          },
          "reportType": {
            "type": "string",
            "enum": ["transaction_summary", "risk_assessment", "regulatory_filing"]
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "format": {
            "type": "string",
            "enum": ["json", "pdf", "csv"],
            "default": "json"
          }
        },
        "required": ["customerId", "reportType", "startDate", "endDate"]
      }
    }
  }
}