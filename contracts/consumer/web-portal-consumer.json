{
  "openapi": "3.0.1",
  "info": {
    "title": "Web Banking Portal Consumer Requirements",
    "description": "API requirements for the web banking portal with advanced features",
    "version": "1.0.0"
  },
  "paths": {
    "/accounts": {
      "get": {
        "summary": "List all customer accounts with filtering",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["active", "inactive", "frozen"]
            }
          },
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["checking", "savings", "credit"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filtered account list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Account"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Open new account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          }
        }
      }
    },
    "/accounts/{accountId}": {
      "get": {
        "summary": "Get detailed account information",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Full account details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update account settings",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Account updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          }
        }
      }
    },
    "/accounts/{accountId}/balance": {
      "get": {
        "summary": "Get current account balance",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detailed balance information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Balance"
                }
              }
            }
          }
        }
      }
    },
    "/transfers": {
      "post": {
        "summary": "Execute money transfer",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transfer processed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transfer"
                }
              }
            }
          }
        }
      }
    },
    "/payments": {
      "post": {
        "summary": "Make bill payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Payment processed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payment"
                }
              }
            }
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "summary": "Get transaction history with advanced filtering",
        "parameters": [
          {
            "name": "accountId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 50,
              "maximum": 100
            }
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["transfer", "payment", "fee", "interest", "deposit"]
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filtered transaction list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/cards": {
      "get": {
        "summary": "List debit and credit cards",
        "responses": {
          "200": {
            "description": "Card list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Card"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Request new card",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CardRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Card request submitted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Card"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["checking", "savings", "credit"]
          },
          "balance": {
            "type": "number",
            "format": "decimal"
          },
          "currency": {
            "type": "string",
            "default": "USD"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "frozen"]
          },
          "nickname": {
            "type": "string"
          },
          "openedDate": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["id", "type", "balance", "status"]
      },
      "AccountRequest": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["checking", "savings"]
          },
          "initialDeposit": {
            "type": "number",
            "format": "decimal",
            "minimum": 0
          },
          "nickname": {
            "type": "string",
            "maxLength": 50
          }
        },
        "required": ["type"]
      },
      "AccountUpdate": {
        "type": "object",
        "properties": {
          "nickname": {
            "type": "string",
            "maxLength": 50
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"]
          }
        }
      },
      "Balance": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "available": {
            "type": "number",
            "format": "decimal"
          },
          "current": {
            "type": "number",
            "format": "decimal"
          },
          "currency": {
            "type": "string",
            "default": "USD"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["accountId", "available", "current"]
      },
      "TransferRequest": {
        "type": "object",
        "properties": {
          "fromAccountId": {
            "type": "string"
          },
          "toAccountId": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "decimal",
            "minimum": 0.01
          },
          "description": {
            "type": "string",
            "maxLength": 255
          },
          "scheduledDate": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["fromAccountId", "toAccountId", "amount"]
      },
      "Transfer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "fromAccountId": {
            "type": "string"
          },
          "toAccountId": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "completed", "failed", "scheduled"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "scheduledDate": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["id", "status"]
      },
      "PaymentRequest": {
        "type": "object",
        "properties": {
          "fromAccountId": {
            "type": "string"
          },
          "toPayeeId": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "decimal",
            "minimum": 0.01
          },
          "description": {
            "type": "string",
            "maxLength": 255
          },
          "category": {
            "type": "string",
            "enum": ["utilities", "rent", "insurance", "shopping", "other"]
          }
        },
        "required": ["fromAccountId", "toPayeeId", "amount"]
      },
      "Payment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "fromAccountId": {
            "type": "string"
          },
          "toPayeeId": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "completed", "failed"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "status"]
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "accountId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit"]
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "description": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "category": {
            "type": "string",
            "enum": ["transfer", "payment", "fee", "interest", "deposit"]
          },
          "merchant": {
            "type": "string"
          }
        },
        "required": ["id", "accountId", "type", "amount", "date"]
      },
      "Card": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "accountId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit"]
          },
          "lastFour": {
            "type": "string",
            "pattern": "^\\d{4}$"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "blocked", "expired"]
          },
          "expiryMonth": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          "expiryYear": {
            "type": "integer",
            "minimum": 2024
          }
        },
        "required": ["id", "type", "status"]
      },
      "CardRequest": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit"]
          },
          "design": {
            "type": "string",
            "enum": ["standard", "premium", "travel"]
          }
        },
        "required": ["accountId", "type"]
      }
    }
  }
}